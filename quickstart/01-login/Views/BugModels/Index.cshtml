@model IEnumerable<SampleMvcAP.Models.BugModel>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.BugID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BugTitle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BugDescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SubmittedBy)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.BugID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BugTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BugDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SubmittedBy)
            </td>
