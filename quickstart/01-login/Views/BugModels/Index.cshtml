@model IEnumerable<SampleMvcAP.Models.BugModel>

@{
    ViewData["Title"] = "Bug Cases";
}

    <h2 class="text-center">Bug Cases:</h2>



@foreach (var item in Model)
{
<div class="container-fluid">
    <div class="panel-group"  style="box-shadow: 0 0 30px #40798C">
        <div class="panel panel-default">
            <div class="panel-heading">
            <div class="panel-title" data-toggle="collapse" href="#@Html.DisplayFor(modelItem => item.BugID)">
                <a style="font-size:medium;font-weight:600"><span class="glyphicon glyphicon-warning-sign" style="color:orangered"></span>  @Html.DisplayFor(modelItem => item.BugTitle) ID:@Html.DisplayFor(modelItem => item.BugID)</a>
            </div>
            </div>
            <div id="@Html.DisplayFor(modelItem => item.BugID)" class="panel-collapse collapse">
                <div class="panel-body">

                    <div style="font-size:small;font-weight:400;color:black">@Html.DisplayFor(modelItem => item.BugDescription)</div>
                    <h class="pull-right" style="font-size:small;font-weight:600;color:black">Submitted:@Html.DisplayFor(modelItem => item.Date)&nbsp;&nbsp;</h>
                </div>
            </div>
            <div class="panel-footer">
                <h style="font-size:small;font-weight:600;color:black"><span class="glyphicon glyphicon-user" style="color:darkorange"></span> @Html.DisplayFor(modelItem => item.SubmittedBy)</h>
                <a class="pull-right" style="font-size:small;font-weight:600;color:black" asp-action="Delete" asp-route-id="@item.BugID">&nbsp;<span class="glyphicon glyphicon-trash">&nbsp;</span></a>
                <a class="pull-right" style="font-size:smaller;font-weight:600;color:black" asp-action="Edit" asp-route-id="@item.BugID">&nbsp; Edit &nbsp;</a>
                <h class="pull-right" style="font-size:smaller;font-weight:600;color:black">Status: @Html.DisplayFor(modelItem => item.Openclosed)&nbsp;&nbsp;</h>


            </div>
        </div>
    </div>
    
</div>

}
<p><a asp-action="Create">Create New</a></p>
