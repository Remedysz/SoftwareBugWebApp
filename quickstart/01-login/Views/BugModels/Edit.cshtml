@model SampleMvcAP.Models.BugModel

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>BugModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="BugID" />
            <div class="form-group">
                <label asp-for="BugTitle" class="control-label"></label>
                <input asp-for="BugTitle" class="form-control" readonly />
                <span asp-validation-for="BugTitle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BugDescription" class="control-label"></label>
                <input asp-for="BugDescription" class="form-control" />
                <span asp-validation-for="BugDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SubmittedBy" class="control-label"></label>
                <input asp-for="SubmittedBy" class="form-control" readonly />
                <span asp-validation-for="SubmittedBy" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Date" class="control-label"></label>
                <input asp-for="Date" class="form-control" readonly />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Openclosed" class="control-label"></label>
                <select asp-for="Openclosed" class="form-control">
                    <option>Closed</option>
                    <option>Open</option>
                </select>
                <span asp-validation-for="Openclosed" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model.BugID">Edit</a> | 
    <a asp-action="Index">Back to List</a>
</div>

